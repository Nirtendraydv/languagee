rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'nirtendraydv@gmail.com';
    }

    // Admins can read/write all data
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    // Public read access for courses and tutors
    match /courses/{courseId} {
      allow read: if true;
    }
    match /tutors/{tutorId} {
      allow read: if true;
    }

    // Settings are only readable by public, writable only by admin (covered by admin rule)
    match /settings/{settingId} {
        allow read: if true;
    }

    // Inquiries can only be created by anyone, but not read, updated or deleted
    match /inquiries/{inquiryId} {
        allow create: if true;
    }

    // Course requests can only be created by authenticated users
    match /courseRequests/{requestId} {
      allow create: if request.auth != null;
    }
    
    // Users can only manage their own documents
    match /users/{userId} {
       allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
