rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Admins have full access to everything
    match /{path=**} {
      allow read, create, update, delete: if request.auth.token.email == 'admin@example.com';
    }
    
    // Publicly readable collections
    match /courses/{courseId} {
      allow read: if true;
    }
    
    match /tutors/{tutorId} {
      allow read: if true;
    }

    match /settings/homepageConfig {
       allow read: if true;
    }

    // Allow a user to read their own user document
    match /users/{userId} {
      allow read: if request.auth.uid == userId;
    }

    // Allow anyone to create inquiries
    match /inquiries/{inquiryId} {
      allow create: if true;
    }

    // Allow authenticated users to create and read their own course requests
    match /courseRequests/{requestId} {
      allow read, create: if request.auth != null;
    }

  }
}
