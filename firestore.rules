
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ADMIN RULE: Grant admin full access to everything.
    // This rule is checked first. If the user is the admin, they are granted access
    // and no other rules are checked for this path.
    match /{document=**} {
      allow read, write: if request.auth != null && request.auth.token.email == 'nirtendraydv@gmail.com';
    }

    // Publicly readable collections
    match /courses/{courseId} {
      allow read: if true;
      allow write: if request.auth != null; // Allow logged-in users to potentially write (e.g., enroll)
    }

    match /tutors/{tutorId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /settings/{settingId} {
        allow read: if true;
        allow write: if request.auth != null;
    }
    
    // User-specific data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Inquiries can be created by anyone, but only read/deleted by admin (covered by admin rule)
    match /inquiries/{inquiryId} {
        allow create: if true;
        allow read, update, delete: if request.auth != null;
    }

    // Course requests can be created by any authenticated user
    match /courseRequests/{requestId} {
        allow create: if request.auth != null;
        allow read, delete: if request.auth != null; // Admins can read/delete
    }

  }
}

    