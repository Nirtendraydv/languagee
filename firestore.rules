rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.email == 'admin@example.com';
    }

    // Global admin rule: Admins can read/write anything.
    match /{path=**} {
      allow read, write: if isAdmin();
    }
    
    // Public access for courses
    match /courses/{courseId} {
      allow read: if true;
    }
    
    // Public access for tutors
    match /tutors/{tutorId} {
      allow read: if true;
    }

    // Users can create inquiries and course requests
    match /inquiries/{inquiryId} {
      allow create: if request.auth != null;
    }

    match /courseRequests/{requestId} {
        allow create: if request.auth != null;
    }

    // Public read for homepage settings
    match /settings/homepageConfig {
      allow read: if true;
    }
  }
}
