rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Admins have full access to everything
    match /{path=**} {
      allow read, write: if request.auth.token.email == 'admin@example.com';
    }
    
    // Publicly readable collections
    match /courses/{courseId} {
      allow read: if true;
    }
    
    match /tutors/{tutorId} {
      allow read: if true;
    }

    match /settings/homepageConfig {
       allow read: if true;
    }

    // Allow anyone to create inquiries (contact form)
    match /inquiries/{inquiryId} {
      allow create: if true;
    }

    // Allow authenticated users to create course requests
    match /courseRequests/{requestId} {
      allow create: if request.auth != null;
    }

  }
}
