
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin
    function isAdmin() {
      return request.auth.token.email == 'nirtendraydv@gmail.com';
    }

    // Admins can read/write all data
    match /{document=**} {
      allow read, write: if isAdmin();
    }
    
    // Public collections can be read by anyone
    match /courses/{courseId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /tutors/{tutorId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Inquiries can only be created by anyone, but only read/deleted by admins.
    match /inquiries/{inquiryId} {
      allow create: if true;
      allow read, delete: if isAdmin();
    }
    
    // Course requests can be created by any authenticated user.
    match /courseRequests/{requestId} {
        allow create: if request.auth != null;
        allow read, write, delete: if isAdmin();
    }

    // User data can only be accessed by the user themselves or by an admin.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId || isAdmin();
    }
  }
}
    