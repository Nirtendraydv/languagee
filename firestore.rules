rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return request.auth.token.email == 'admin@example.com';
    }

    // Admins have full access to everything. This rule is evaluated first.
    match /{path=**} {
      allow read, write: if isAdmin();
    }
    
    // Publicly readable collections (for non-admins)
    match /courses/{courseId} {
      allow read: if true;
    }
    
    match /tutors/{tutorId} {
      allow read: if true;
    }

    match /settings/homepageConfig {
       allow read: if true;
    }

    // Allow anyone to create inquiries (contact form)
    match /inquiries/{inquiryId} {
      allow create: if true;
    }

    // Allow authenticated users to create and read their own course requests
    match /courseRequests/{requestId} {
      allow create: if request.auth != null;
      allow read: if request.auth.uid == resource.data.userId;
    }
    
    // Allow users to read and manage their own user document
    match /users/{userId} {
      allow read, create, update: if request.auth.uid == userId;
    }
  }
}
