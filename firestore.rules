rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return request.auth.token.email == 'admin@example.com';
    }

    // Admins can do anything
    match /{path=**} {
      allow read, write: if isAdmin();
    }
    
    // Publicly readable collections
    match /courses/{courseId} {
      allow read: if true;
    }
    
    match /tutors/{tutorId} {
      allow read: if true;
    }

    match /settings/homepageConfig {
       allow read: if true;
    }

    // Allow anyone to create inquiries
    match /inquiries/{inquiryId} {
      allow create: if true;
    }

    // Allow authenticated users to create and read their own course requests
    match /courseRequests/{requestId} {
      allow create, read: if request.auth != null;
    }

    // Allow users to read their own user data
    match /users/{userId} {
      allow read: if request.auth.uid == userId;
    }
  }
}
