
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is the admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'nirtendraydv@gmail.com';
    }

    // Admins have full access to everything.
    // This rule is checked first. If a user is an admin, they are granted access
    // and other rules are not evaluated for them.
    match /{path=**} {
      allow read, write: if isAdmin();
    }
    
    // Publicly readable collections
    match /courses/{courseId} {
      allow read: if true;
      // Write access is handled by the admin rule above.
      allow write: if false; 
    }

    match /tutors/{tutorId} {
      allow read: if true;
      allow write: if false;
    }
    
    match /settings/{docId} {
        allow read: if true;
        allow write: if false;
    }

    // Secured collections
    match /inquiries/{inquiryId} {
      // Only admins can read inquiries, anyone can create them.
      allow read: if false;
      allow create: if true;
      allow update, delete: if false;
    }

    match /courseRequests/{requestId} {
        allow read, write: if request.auth != null;
    }
    
    match /users/{userId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
